*/
 
color                  = {} 
color.black            = #000000
color.gray-most-dark   = #181818
color.gray-very-dark   = #282828
color.gray-dark        = #444444
color.gray-medium      = #555555
color.gray             = #888888
color.gray-bright      = #cccccc
color.gray-very-bright = #dddddd
color.white            = #ffffff
color.yellow-bright    = #ffff88
color.yellow           = #ffff00
color.orange-bright    = #ffaa00
color.orange           = #ff8800
color.red              = #ff0000
color.green-bright     = #00ff00
color.green            = #00aa00
color.green-dark       = #006600
color.blue-dark        = #2222aa
color.blue             = #4444ff
color.blue-medium      = #6666ff
color.blue-bright      = #8888ff
color.blue-very-bright = #aaaaff

// main colors
color.comment        = #555555
color.background     = color.black
color.text           = color.gray-bright
color.comment-marker = color.gray-very-dark
color.comment-block  = color.comment
color.selection      = color.gray-dark
color.cursor-line    = color.gray-most-dark
color.variable       = color.yellow-bright

//______________________________________________________________________________________________________________________
/*
*   0000000   00000000  000   000  00000000  00000000    0000000   000    
*  000        000       0000  000  000       000   000  000   000  000    
*  000  0000  0000000   000 0 000  0000000   0000000    000000000  000    
*  000   000  000       000  0000  000       000   000  000   000  000    
*   0000000   00000000  000   000  00000000  000   000  000   000  0000000
*/

atom-text-editor
atom-text-editor.editor

    background: color.background
    color:      color.text
    .selection .region
        background-color: color.selection
        border-radius:    4px
    .syntax--text
    .syntax--source
        color: color.text
        
        .syntax--comment
            color: color.comment
            &.syntax--block
                color: color.comment-block
                
            &.syntax--punctuation
                color: color.comment-marker
                
            .selection
            &.selection
                color: color.orange
            
atom-text-editor.editor

    //__________________________________________________________________________________________________________________
    /*
    *   0000000   000   000  000000000  000000000  00000000  00000000 
    *  000        000   000     000        000     000       000   000
    *  000  0000  000   000     000        000     0000000   0000000  
    *  000   000  000   000     000        000     000       000   000
    *   0000000    0000000      000        000     00000000  000   000
    */
    .gutter
        font-weight: bold
        background: color.black
        border-right: 1px solid color.gray-most-dark
            
        .line-number 
            color: color.gray-medium

            &.cursor-line-no-selection 
            &.cursor-line 
                background: color.cursor-line
                color: color.orange
            
    //__________________________________________________________________________________________________________________            
    /*
    *   0000000   000   000  000  0000000    00000000   0000000
    *  000        000   000  000  000   000  000       000     
    *  000  0000  000   000  000  000   000  0000000   0000000 
    *  000   000  000   000  000  000   000  000            000
    *   0000000    0000000   000  0000000    00000000  0000000 
    */
    .wrap-guide
        background-color: color.gray-very-dark

    .indent-guide
        color: color.gray-very-dark

    .invisible-character
        color: color.gray-dark
            
    .line.cursor-line
        background-color: color.cursor-line
    
    //__________________________________________________________________________________________________________________            
    /*
    *   0000000   0000000   000   000  00000000    0000000  00000000
    *  000       000   000  000   000  000   000  000       000     
    *  0000000   000   000  000   000  0000000    000       0000000 
    *       000  000   000  000   000  000   000  000       000     
    *  0000000    0000000    0000000   000   000   0000000  00000000
    */
    
    .syntax--text
    .syntax--source

        .syntax--meta.syntax--preprocessor.syntax--include.syntax--c     
        .syntax--meta.syntax--preprocessor.syntax--macro.syntax--c
            color: color.blue

        .syntax--entity
        .syntax--class
            color: color.yellow
            &.syntax--punctuation
                color: darken(color.orange-bright, 20)
        .syntax--attribute-name
            color: color.orange-bright
            
        .syntax--storage // class, var, etc
            color: color.blue-very-bright

        .syntax--function
            color: color.blue-very-bright
            &.syntax--name
                color: color.yellow-bright
            &.syntax--storage // -> =>
                color: color.blue-medium
            &.syntax--support // require, len, indexOf. etc
                color: color.gray
        .syntax--function-call
            color: color.orange-bright
            &.syntax--arguments
                color: color.blue-very-bright
        .syntax--function.syntax--parameter
            color: color.orange-bright
                            
        .syntax--brace.syntax--round  
            color: color.blue-medium
        .syntax--meta.syntax--structure.syntax--list
        .syntax--meta.syntax--item-access
        .syntax--brace.syntax--square
                color: color.blue-bright
        
        .syntax--meta.syntax--selector.syntax--css
        .syntax--brace.syntax--curly
        .syntax--punctuation.syntax--property-list
            color: color.gray-dark
            
        .syntax--dictionary
            color: color.gray
            &.syntax--separator
                color: color.gray-dark
                &.syntax--key-value 
                    color: color.gray-dark
        
        .syntax--punctuation.syntax--separator.syntax--parameters
        .syntax--comma
            color: color.blue
        
        .syntax--period
            color: color.gray

        .syntax--constant
            color: color.blue-bright
            &.syntax--numeric  
                color: color.blue-very-bright
                
        .syntax--keyword // new, =, -, +, :, isnt, is
            &.syntax--operator 
                color: color.blue-medium
            &.syntax--control  // do, if, return, then, switch, for
                color: color.blue-bright
                &.syntax--import
                    color: color.gray

        .syntax--variable            
            &.syntax--parameter.syntax--function
                color: color.blue-bright

            color: color.blue-very-bright
                
        .syntax--string
            color: color.green
            &.syntax--punctuation.syntax--definition
                color: color.green-dark
                                
        .syntax--inherited-class
            color: color.yellow-bright
        
        .syntax--variable.syntax--assignment // local variables and dict keys
            color: color.variable
        .syntax--property-name
            color: color.blue-bright
        
        .syntax--separator.syntax--key-value   
            color: darken(color.variable, 50)
            
        &.syntax--stylus
            color: color.blue

        .syntax--tag
            color: color.gray
            &.syntax--entity
                color: color.blue-bright
            &.syntax--class
                color: color.blue-very-bright
            &.syntax--id
                color: color.yellow
        .syntax--tag.syntax--punctuation
        .syntax--terminator
            color: color.gray-dark

        &.syntax--noon
            color: #ff8

        .syntax--key.syntax--noon
            color: #f80

        .syntax--punctuation
            &.syntax--array.syntax--noon
                color: #88f

            &.syntax--dense.syntax--noon
                color: #444
                font-weight: bold

        .syntax--key.syntax--dense.syntax--noon
            color: #888

        .syntax--constant.syntax--color.syntax--noon
            color: #faa

        .syntax--punctuation
            &.syntax--bracket.syntax--noon
                color: #884

            &.syntax--dot.syntax--noon
                color: #a60
                font-weight: bold

            &.syntax--dim.syntax--noon
                color: #a60

            &.syntax--regex.syntax--noon
                color: #f00
                font-weight: bold

            &.syntax--key.syntax--escape.syntax--noon
                color: #600    
                font-weight: bold

            &.syntax--value.syntax--escape.syntax--noon
                color: #333    
                font-weight: bold
